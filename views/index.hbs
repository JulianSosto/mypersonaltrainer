<script>

    function sendValue(val) {
        const nombrecampo = "input_" + val.id;
        const input = document.getElementById(nombrecampo);
        if (val.value === undefined) {
            input.value = val.name;
        } else {
            input.value = val.value;
        }
    }

    const age = document.getElementById('age');
    const height = document.getElementById('height');
    const weight = document.getElementById('weight');
    const activity = document.getElementById('activity');
    const btnNext = document.getElementById('nextSlide');

    eventListeners();

    function eventListeners() {
        // Inicio de la aplicación y deshabilitar submit
        document.addEventListener('DOMContentLoaded', inicioApp);
        // Campos del formulario
        age.addEventListener('blur', validarEdad);
        height.addEventListener('blur', validarHeight);
        weight.addEventListener('blur', validarWeight);
        activity.addEventListener('blur', validarActivity);
        activity.addEventListener('click', validarActivity);

    }


    // funciones
    function inicioApp() {
        // deshabilitar el envio
        btnNext.disabled = true;
    }


    function validarEdad() {
        validarLongitud(this)
        if (age.value > 0 && age.value < 100) {
            this.style.borderColor = 'green';
            this.classList.remove('error');
            if (document.getElementById('error-age')) {
                document.getElementById('error-age').remove();
            };
        } else {
            let div = showError();
            div.innerHTML = 'Verify Age';
            div.setAttribute('id', 'error-age');
            if (!document.getElementById('error-age')) {
                document.getElementById('stats').appendChild(div);
            };
            setTimeout(function () {
                $('error-age').remove();
            }, 3000);
            this.style.borderColor = 'red';
            this.classList.add('error');
        }
    }
    function validarHeight() {
        validarLongitud(this)
        if (height.value > 0 && height.value < 250) {
            this.style.borderColor = 'green';
            this.classList.remove('error');
            if (document.getElementById('error-height')) {
                document.getElementById('error-height').remove();
            }

        } else {
            let div = showError();
            div.innerHTML = 'Verify Height';
            div.setAttribute('id', 'error-height');
            if (!document.getElementById('error-height')) {
                document.getElementById('stats').appendChild(div);
            };
            this.style.borderColor = 'red';
            this.classList.add('error');
        }
    }
    function validarWeight() {
        validarLongitud(this)
        if (weight.value > 0 && weight.value < 300) {
            this.style.borderColor = 'green';
            this.classList.remove('error');
            if (document.getElementById('error-weight')) {
                document.getElementById('error-weight').remove();
            }
        } else {
            let div = showError();
            div.innerHTML = 'Verify Weight';
            div.setAttribute('id', 'error-weight');
            if (!document.getElementById('error-weight')) {
                document.getElementById('stats').appendChild(div);
            };
            this.style.borderColor = 'red';
            this.classList.add('error');
        }
    }
    // Verifica la longitud del texto en los campos
    function validarLongitud(campo) {
        if (campo.value.length > 0) {
            campo.style.borderBottomColor = 'green';
            campo.classList.remove('error');
        } else {
            campo.style.borderBottomColor = 'red';
            campo.classList.add('error');
        }
    }
    function validarActivity() {
        if (activity.value !== 'Choose') {
            this.style.borderColor = 'green';
            this.classList.remove('error');
            if (document.getElementById('error-activity')) {
                document.getElementById('error-activity').remove();
            };
        } else {
            let div = showError();
            div.innerHTML = 'Choose activity';
            div.setAttribute('id', 'error-activity');
            document.getElementById('stats').appendChild(div);
            this.style.borderColor = 'red';
            this.classList.add('error');
        }
        let errores = document.querySelectorAll('.error');

        if (age.value !== '' && height.value !== '' && weight.value !== '' && activity.value !== 'Choose') {
            if (errores.length === 0) {
                btnNext.disabled = false;
            }
        }
    }
    function showError() {
        let div = document.createElement('div')
        div.classList.add('alert', 'alert-danger', 'alert-dismissible', 'fade', 'show')
        return div;
    }

    //Get the button
var mybutton = document.getElementById("myBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0;
  document.documentElement.scrollTop = 0;
}
