<style>
    body {
        background-color: rgba(0, 220, 255, 0.14);
    }

    .btn-pink {
        background-color: #e13590 !important;
        color: white;
        font-size: 1.4rem;
    }

    .title2 {
        color: #e13590 !important;
    }
</style>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <img src="img/mypt_logo_vector.svg" class="img-fluid imagen-cuadrado py-2" />
                <h1 class="text-center mb-3 title2"><i class="fas fa-sign-in-alt"></i> Login</h1>
                {{> _messages}}
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter Password" />
                    </div>
                    <button type="submit" class="btn btn-light btn-block mb-2 btn-pink text-light">Login</button>
                </form>
                <a href="/auth/google" class="btn btn-light btn-block mb-2 btn-pink text-light">Login with google</a>
                <br>
                <a href="/auth/facebook" class="btn btn-light btn-block mb-2 btn-pink text-light">Login with
                    Facebook</a>
                <p class="lead mt-4">
                    No Account? <a href="/users/register" class="title2">Register here!</a>
                </p>
                <p class="lead mt-1">
                    Have you forgotten your password? <a href="/recoverpass" class="title2">Recover here!</a>
                </p>
            </div>
        </div>
    </div>

</div>