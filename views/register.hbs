<style>
  body {
    background-color: rgba(0, 220, 255, 0.14);
  }

  .btn-pink {
    background-color: #e13590 !important;
    color: white;
    font-size: 1.4rem;

  }

  .title2 {
    color: #e13590 !important;
  }
</style>
<div class="container">
  <div class=" row mt-md-2 mt-lg-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <img src="img/mypt_logo_vector.svg" class="img-fluid imagen-cuadrado py-2" />
        <h1 class="text-center mb-3 title2">
          Register
        </h1>
        {{> _messages}}
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" {{#if name }}
              value={{name}} {{else}} value=" " {{/if}} />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" {{#if email }}
              value={{email}} {{else}} value=" " {{/if}} />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              {{#if password }} value={{password}} {{else}} value="" {{/if}} />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              {{#if password2 }} value={{password2}} {{else}} value="" {{/if}} />
          </div>
          <button type="submit" class="btn btn-light text-light btn-block btn-pink">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login" class="title2">Login here!</a></p>
      </div>
    </div>
  </div>
</div>